function [H_givenBS, B_givenHS, S_givenHB] = q1c(HBS, HB, HS, BS)
% Entrée :
%   * HBS : Matrice 5 x 4 x 3 des probas de la loi conjointe
% Sortie :
%   % H_givenBS : Matrice (5x4x3) : H_givenBS(h,b,s) = P(H = h|B = b,S = s)
%   % B_givenHS : Matrice (5x4x3) : B_givenHS(b,h,s) = P(B = b|H = h,S = s)
%   % S_givenHB : Matrice (5x4x3) : S_givenHB(s,h,b) = P(S = s|H = h,B = b)
    
    H_givenBS = zeros(5, 4, 3);
    % H_givenBS(i, j, k) = P(H = i | B = j, S = k)
    for h = 1:5
        for b = 1:4
           for s = 1:3
                H_givenBS(h, b, s) = HBS(h, b, s) / BS(b, s);
           end
        end
    end
    
    B = zeros(4, 1);
    % Marginale de B (cerveau)
    for b = 1:4
        B(b) = sum(sum(HBS(:, b, :)));
    end
    
    S = zeros(3, 1);
    % Marginale de S (estomac)
    for s = 1:3
        S(s) = sum(sum(HBS(:, :, s)));
    end
end