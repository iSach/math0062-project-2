function [HB, HS, BS] = q1a(HBS)
% Entrée :
%   * HBS : Matrice 5 x 4 x 3 des probas de la loi conjointe
% Sortie :
%   % HB : Matrice (5x4) pour la loi conjointe de (H, B).
%   % HS : Matrice (5x3) pour la loi conjointe de (H, S).
%   % BS : Matrice (4x3) pour la loi conjointe de (B, S). 
    
    HB = zeros(5, 4);
    % Marginale de H (coeur)
    for h = 1:5
        for b = 1:5
            H(h) = sum(sum(HBS(h, b :)));
        end
    end
    
    HS = zeros(5, 3);
    % Marginale de B (cerveau)
    for b = 1:4
        B(b) = sum(sum(HBS(:, b, :)));
    end
    
    BS = zeros(4, 3);
    % Marginale de S (estomac)
    for s = 1:3
        S(s) = sum(sum(HBS(:, :, s)));
    end
end